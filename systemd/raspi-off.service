[Unit]
Description=Raspberry Pi Shutdown
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=root
EnvironmentFile=-/etc/default/raspi-off
ExecStart=/usr/sbin/raspi-off \
  --mqtt-broker=${RASPI_OFF_MQTT_BROKER_URL:-tcp://mqtt.local:1883} \
  --mqtt-base-topic=${RASPI_OFF_MQTT_BASE_TOPIC:-raspi-off}
StartLimitBurst=5
StartLimitIntervalSec=10

[Install]
WantedBy=multi-user.target
